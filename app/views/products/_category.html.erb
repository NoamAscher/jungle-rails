<article class="category">
  <header>
    <%= link_to category do %>
      <%= image_tag category.image.thumb, alt: category.name %>
      <h4><%= category.name %></h4>
    <% end %>
  </header>
  <p class="created-at">
    <%= category.created_at %>
  </p>
  <footer class="actions">
    <%= link_to add_item_cart_path(category_id: products.category_id), class: 'btn btn-primary', method: :put do %>
      <%= fa_icon "shopping-cart", text: 'Add' %>
    <% end %>
    <%= link_to product, class: 'btn btn-default pull-right' do %>
      Details &raquo;
    <% end %>
  </footer>

