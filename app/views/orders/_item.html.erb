<% quantity = details.quantity %>

  <% product = details.product %>
  <% item_total = details.item_price * quantity %>
  <% @order_total += item_total %>

  <tr>
    <td>
      <%= image_tag product.image.tiny %>
    </td>
    <td>
      <h4><%= product.name %></h4>
      <br>
      <p><%= product.description %></p>
    </td>
    <td>
      <%= details.item_price %>
    </td>
    <td>

      <%= quantity %>

    </td>
    <td>
      <%= item_total %>
    </td>
  </tr>
