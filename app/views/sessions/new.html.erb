<% provide(:title, "Log in") %>
<h1>Log in</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_tag("/sessions", method: "post") do |f| %>

      <%= label_tag(:email) %>
      <%= text_field_tag(:email) %>

      <%= label_tag(:password) %>
      <%= text_field_tag(:password) %>

      <%= submit_tag("Log in") %>
    <% end %>

  </div>
</div>